# include platform-specific configuration

CFG_DIR = ../../src/configs
-include $(CFG_DIR)/current

ifdef CONFIG
include $(CFG_DIR)/$(CONFIG)
endif

# general project settings

PROJECT = BunnyBenchmark
TARGET = ../../bin/$(CONFIG)/$(PROJECT)$(APP_EXTENSION)
CFG_TYPE = exe
OBJ_DIR = ../../tmp/$(PROJECT)/$(CONFIG)

# project-dependent compiler/preprocessor flags

# source files

SOURCES = \
BunnyBenchmark.cpp \
plymeshreader.cpp \
sphereunitvecpool.cpp \
rply.c

# libraries

LIBS += $(CORE_LIBS)

# include directories

INC_DIRS = .
INC_DIRS += ../../include

# library directories

LIB_DIRS = .

# include the core part of the makefile

include $(CFG_DIR)/../makefile.core
